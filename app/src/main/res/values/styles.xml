<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义标题样式-->
    <style name="TitleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#8b71ef9d</item>
        <item name="android:text">标题栏</item>
    </style>

    <style name="SetupNextButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">next</item>
        <item name="android:text">下一步</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="SetupPreButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">next</item>
        <item name="android:text">上一步</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:drawableLeft">@drawable/arrow_left</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

</resources>
